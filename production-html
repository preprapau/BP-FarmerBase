<script>
/* ===============================
   PRODUCTION PLAN тАУ SINGLE PAGE
   =============================== */

let production = JSON.parse(localStorage.getItem("PRODUCTION_PLAN")) || [];

function save(){
  localStorage.setItem("PRODUCTION_PLAN",JSON.stringify(production));
  render();
}

function render(){
  tbody.innerHTML="";
  let total=0;

  production.forEach((p,i)=>{
    p.amount = (Number(p.rate)||0) * (Number(p.qty)||0);
    total += p.amount;

    tbody.innerHTML+=`
<tr>
<td><input value="${p.name||""}" oninput="edit(${i},'name',this.value)"></td>

<td>
<select onchange="edit(${i},'type',this.value)">
<option ${p.type==="рдкрд╢реБ"?"selected":""}>рдкрд╢реБ</option>
<option ${p.type==="рддрд░рдХрд╛рд░реА"?"selected":""}>рддрд░рдХрд╛рд░реА</option>
<option ${p.type==="рджреБрдЧреНрдз"?"selected":""}>рджреБрдЧреНрдз</option>
<option ${p.type==="рдЕрдиреНрдп"?"selected":""}>рдЕрдиреНрдп</option>
</select>
</td>

<td><input value="${p.unit||""}" oninput="edit(${i},'unit',this.value)"></td>
<td><input type="number" value="${p.rate||0}" oninput="edit(${i},'rate',this.value)"></td>
<td><input type="number" value="${p.qty||0}" oninput="edit(${i},'qty',this.value)"></td>
<td>рд░реБ ${p.amount.toLocaleString()}</td>
<td>
<textarea rows="2" oninput="edit(${i},'note',this.value)">
${p.note||""}</textarea>
</td>
<td class="del" onclick="remove(${i})">тЬЦ</td>
</tr>`;
  });

  grandTotal.innerText = total.toLocaleString();
}

function addRow(){
  production.push({
    id:Date.now(),
    name:"",
    type:"рддрд░рдХрд╛рд░реА",
    unit:"",
    rate:0,
    qty:0,
    note:""
  });
  save();
}

function edit(i,f,v){
  production[i][f] =
    (f==="rate"||f==="qty") ? Number(v)||0 : v;
  save();
}

function remove(i){
  if(!confirm("рдпреЛ рдЙрддреНрдкрд╛рджрди рд╣рдЯрд╛рдЙрдиреЗ ?")) return;
  production.splice(i,1);
  save();
}

render();
</script>

