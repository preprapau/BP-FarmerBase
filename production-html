<script>
/* LOAD PROJECT */
const key = localStorage.getItem("activeProject");
if(!key){ alert("Active рдпреЛрдЬрдирд╛ рднреЗрдЯрд┐рдПрди"); }
let project = JSON.parse(localStorage.getItem(key)) || {};
project.productionProducts = project.productionProducts || [];

/* RENDER */
function render(){
  prodBody.innerHTML="";
  project.productionProducts.forEach((p,i)=>{
    const tr=document.createElement("tr");
    tr.innerHTML=`
<td>
  <input value="${p.name||""}"
    oninput="upd(${i},'name',this.value)">
</td>

<td>
  <select onchange="upd(${i},'type',this.value)">
    <option ${p.type==="рдкрд╢реБрдЬрдиреНрдп"?"selected":""}>рдкрд╢реБрдЬрдиреНрдп</option>
    <option ${p.type==="рддрд░рдХрд╛рд░реА"?"selected":""}>рддрд░рдХрд╛рд░реА</option>
    <option ${p.type==="рджреБрдЧреНрдз"?"selected":""}>рджреБрдЧреНрдз</option>
    <option ${p.type==="рдЕрдиреНрдп"?"selected":""}>рдЕрдиреНрдп</option>
  </select>
</td>

<td>
  <input type="number" value="${p.qty||0}"
    oninput="upd(${i},'qty',this.value)">
</td>

<td>
  <input value="${p.unit||""}"
    oninput="upd(${i},'unit',this.value)">
</td>

<td>
  <textarea rows="2"
    oninput="upd(${i},'note',this.value)">${p.note||""}</textarea>
</td>

<td class="delBtn" onclick="del(${i})">тЬЦ</td>
    `;
    prodBody.appendChild(tr);
  });
}

/* ADD */
function addProduct(){
  project.productionProducts.push({
    id:"prod_"+Date.now(),
    name:"",
    type:"рддрд░рдХрд╛рд░реА",
    qty:0,
    unit:"",
    note:""
  });
  save();render();
}

/* UPDATE */
function upd(i,f,v){
  project.productionProducts[i][f] =
    f==="qty" ? (Number(v)||0) : v;
  save();
}

/* DELETE */
function del(i){
  if(!confirm("рдпреЛ рдЙрддреНрдкрд╛рджрди рд╣рдЯрд╛рдЙрдиреЗ ?")) return;
  project.productionProducts.splice(i,1);
  save();render();
}

/* SAVE */
function save(){
  localStorage.setItem(key,JSON.stringify(project));
}

/* INIT */
render();
</script>

